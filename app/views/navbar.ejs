<!DOCTYPE html>
<html lang="en">
<head>

    <style>
        .topnavbar{
            overflow: hidden;
            background-color: gray;
            max-height: 50px;
        }

        .topnavbar a{
            float: left;
            display: block;
            color: black;
            text-align: center;
            padding: 15px;
            text-decoration: none;
            font-size: 18px;
        }

        .topnavbar a:hover {
            background-color: darkgray;
            color: black;
        }

        .topnavbar .search{
            float: right;
        }

        .topnavbar input{
            padding: 6px;
            margin-top: 8px;
            font-size: 17px;
            border: none;
        }

        .topnavbar .search button {
            float: right;
            padding: 6px;
            margin-top: 8px;
            margin-right: 16px;
            background: #ddd;
            font-size: 17px;
            border: none;
            cursor: pointer;
        }


        .topnavbar .search button:hover {
            background: darkgrey;
        }

        .dropdown {
            float: right;
            overflow: hidden;
        }

        .dropdown .dropbtn {
            float: right;
            padding: 6px;
            margin-top: 8px;
            margin-right: 16px;
            background: #ddd;
            font-size: 17px;
            border: none;
            cursor: pointer;
            min-width: 160px;
        }

        .dropdown-content {
            display: none;
            position: absolute;
            background-color: #f9f9f9;
            min-width: 200px;
            box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
            z-index: 1;
        }

        .but{
            box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
            background-color: #f9f9f9;
            font-size: 17px;
            float: none;
            color: black;
            padding: 12px 16px;
            text-decoration: none;
            display: block;
            text-align: left;
            min-width: 200px;
            border: none;
            outline: none;
        }



        .dropdown-content a{
            float: none;
            color: black;
            padding: 12px 16px;
            text-decoration: none;
            display: block;
            text-align: left;
        }

        .but:hover {
            background-color: #ddd;
        }

        .dropdown-content a:hover {
            background-color: #ddd;
        }

        .dropdown:hover .dropdown-content {
            display: block;
        }

    </style>
</head>
<body>
<div class="topnavbar">

    <a href="/">
       Home
    </a>

    <div class="dropdown">
        <button class="dropbtn">
            <% if (user.login !== '') {%>
                Witaj, <%=user.login%>
            <% } else {%>
                Zaloguj/Zarejestruj
            <%}%>
        </button>

        <div class="dropdown-content">
            <% if (user.login !== '') {%>

                <form action="/users/<%=user.id%>/settings" method="GET">
                    <button class="but" type="submit">Ustawienia</button>
                </form>

                <form action="/favourites/<%=user.id%>" method="GET">
                    <button class="but" type="submit">Obserwacje</button>
                </form>

                <form action="/checkout/<%=user.id%>" method="GET">
                    <button class="but" type="submit">Koszyk</button>
                </form>

                <form action="/orders/<%=user.id%>" method="GET">
                    <button class="but" type="submit">Historia zamówień</button>
                </form>


                <% if (user.isAdmin){%>

                    <form action="/orders" method="GET">
                        <button class="but" type="submit">Lista zamówień</button>
                    </form>


                    <form action="/users" method="GET">
                        <button class="but" type="submit">Lista użytkowników</button>
                    </form>


                    <form action="/products" method="POST">
                        <button class="but" type="submit">Dodaj produkt</button>
                    </form>

                <%}%>

                <form action="/users/logout" method="GET">
                    <button class="but" type="submit">Wyloguj się</button>
                </form>

            <% } else {%>
                    <form action="/users/login" method="GET">
                        <button class="but" type="submit">Zaloguj się</button>
                    </form>

                    <form action="/users/register" method="GET">
                        <button class="but" type="submit">Zarejestruj się</button>
                    </form>
            <%}%>
        </div>

    </div>

    <% if (user.login !== '') {%>
        <a href="/checkout/<%=user.id%>" style="float: right">Koszyk</a>
        <a href="/favourite/<%=user.id%>" style="float: right">Obserwacje</a>
    <% } %>

    <div class="search">
        <form action="/products/search" method="post">
            <input type="text" name="search">
            <button type="submit">Wyszukaj</button>
        </form>

    </div>

</div>

</body>

</html>